{% extends "_templates/base.njk" %}

{% set title = "Iconic Graphic Designers in Music" %}

{% block content %}
<div class="container py-5">
  <h1 class="mb-4">Graphic Designers Who Shaped Music</h1>

  {% for artist in artists %}
    <div class="text-center mb-3">
  {% if artist.portrait %}
  <h2>{{ artist.name }}</h2>
  <img src="/img/{{ artist.portrait }}" alt="{{ artist.name }}" class="img-fluid rounded img-small mb-3">
  {% endif %}
  
  <p><strong>Famous For:</strong> {{ artist.famous_for }}</p>
  <p><strong>Style:</strong> {{ artist.style }}</p>
  
  {% if artist.quotes %}
  <blockquote class="blockquote">
    <p class="mb-0">{{ artist.quotes }}</p>
  </blockquote>
  {% endif %}

  {% if artist.artwork %}
  <img src="/img/{{ artist.artwork }}" alt="{{ artist.name }} artwork" class="img-fluid rounded img-small mt-3">
  {% endif %}
</div>

  {% endfor %}
</div>
{% endblock %}
