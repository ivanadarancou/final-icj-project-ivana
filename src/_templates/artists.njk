{% extends "_templates/base.njk" %}

{% set title = "Iconic Graphic Designers in Music" %}

{% block content %}
<div class="container py-5">
  <h1 class="mb-4">Graphic Designers Who Shaped Music</h1>

  {% for artist in artists %}
    <div class="mb-5">
      <div class="row align-items-center">
        <div class="col-md-4">
          <img src="/img/{{ artist.portrait }}" alt="{{ artist.name }}" class="img-fluid rounded mb-3">
        </div>
        <div class="col-md-8">
          <h2>{{ artist.name }}</h2>
          <p><strong>Famous For:</strong> {{ artist.famous_for }}</p>
          <p><strong>Style:</strong> {{ artist.style }}</p>
          {% if artist.quotes %}
          <blockquote class="blockquote">
            <p class="mb-0">{{ artist.quotes }}</p>
          </blockquote>
          {% endif %}
          {% if artist.artwork %}
          <div class="mt-3">
            <img src="/img/{{ artist.artwork }}" alt="{{ artist.name }} artwork" class="img-fluid rounded">
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  {% endfor %}
</div>
{% endblock %}
